<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#000000"
    android:clickable="false"
    android:touchscreenBlocksFocus="false"
    android:backgroundTint="#ff000000">


    <TextView
        style ="@style/AppTheme"
        android:text="OnVibe"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:singleLine="false"
        android:elevation="@dimen/abc_action_bar_stacked_max_height"
        android:background="#000000"
        android:textColor="#56F743"
        android:textSize="48dp"/>

    <Switch
        style ="@style/AppTheme"
        android:text="Warnings"
        android:id="@+id/switch1"
        android:layout_marginTop="33dp"
        android:checked="false"
        android:layout_below="@+id/textView"
        android:onClick="disable"
        android:textSize="28dp"
        android:textColorHighlight="#ffffad8f" />

    <Button
        style ="@style/AppTheme"
        android:text="Add This Location To Alerts"
        android:id="@+id/button"
        android:textColor="#000000"
        android:onClick="addLoc"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/switch1"
        android:layout_centerHorizontal="true"
        android:textSize="32dp"
        android:textColorHighlight="#0041ff22" />

</RelativeLayout>
